YoY Attrition Count % = 
VAR CurrentYearCount =
    [Attrition Count]
VAR PreviousYearCount =
    CALCULATE (
        [Attrition Count],
        DATEADD ( 'Date'[Date], -1, YEAR )
    )
VAR DiffPercent =
    DIVIDE ( CurrentYearCount - PreviousYearCount, PreviousYearCount )
VAR Icon =
    IF ( DiffPercent > 0, "ğŸ”¼",
        IF ( DiffPercent < 0, "ğŸ”»", "â–")
    )
RETURN
    Icon & " " & FORMAT ( DiffPercent, "0.00%" )
